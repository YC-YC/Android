<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testbackview"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="com.example.testbackview.MyApp"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.testbackview.MainActivity"
            android:launchMode="singleInstance"
            android:hardwareAccelerated="false"
            android:label="@string/app_name_enter" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.example.testbackview.activity.GranzortActivity"
            android:launchMode="singleInstance"
            android:hardwareAccelerated="false"
            android:label="光影线" >
        </activity>
        <activity
            android:name="com.example.testbackview.activity.BackActivity"
            android:launchMode="singleInstance"
            android:hardwareAccelerated="false"
            android:label="倒车" >
        </activity>
        <activity
            android:name="com.example.testbackview.activity.EnvolopActivity"
            android:launchMode="singleInstance"
            android:label="包络线" >
        </activity>
         <activity
            android:name="com.example.testbackview.activity.LevelActivity"
            android:launchMode="singleInstance"
            android:label="雷达等级" >
        </activity>
        <activity
            android:name="com.example.testbackview.activity.ClockActivity"
            android:launchMode="singleInstance"
            android:label="模拟时钟" >
        </activity>
    </application>

</manifest>
