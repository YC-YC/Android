<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app_custom="http://schemas.android.com/apk/res/com.example.testbackview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <com.example.testbackview.widget.EnvelopeView
            android:id="@+id/envelope_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            app_custom:from_color="#FFFF8800"
            android:layout_marginTop="30dp"
            app_custom:number="6"
            app_custom:persent="0.55"
            app_custom:radio="200"
            app_custom:rotate_angle="0"
            app_custom:text_clockwise="false"
            app_custom:sweepAngle="100"
            app_custom:to_color="#00FF0000" />

        <com.example.testbackview.widget.EnvelopeView
            android:id="@+id/envelope_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            app_custom:from_color="#FFFF8800"
            app_custom:number="6"
            app_custom:persent="0.55"
            app_custom:radio="200"
            app_custom:rotate_angle="180"
            app_custom:sweepAngle="100"
            app_custom:to_color="#00FF0000" />

        <com.example.testbackview.widget.EnvelopeView
            android:id="@+id/envelope_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            app_custom:from_color="#FFFF8800"
            android:layout_marginTop="15dp"
            app_custom:number="4"
            app_custom:persent="0.55"
            app_custom:radio="200"
            app_custom:text_clockwise="false"
            app_custom:rotate_angle="90"
            app_custom:sweepAngle="50"
            app_custom:to_color="#00FF0000" />

        <com.example.testbackview.widget.EnvelopeView
            android:id="@+id/envelope_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            app_custom:from_color="#FFFF8800"
            android:layout_marginTop="15dp"
            app_custom:number="4"
            app_custom:persent="0.55"
            app_custom:radio="200"
            app_custom:rotate_angle="270"
            app_custom:sweepAngle="50"
            app_custom:to_color="#00FF0000" />
    </FrameLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <SeekBar
                android:id="@+id/seekBar12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:max="100"
                android:progress="50" />

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doClick"
                android:text="复位" />
             <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="doClick"
                android:text="退出" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>